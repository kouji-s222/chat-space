%body
  .chat-side
    .side-header
      .side-box
        .side-box__name
          = current_user.name
        .side-box__icon
          = link_to new_group_path, class: "new-group__btn" do
            = icon('fas', 'edit')
          = link_to edit_user_path(current_user), class: "account__btn" do
            = icon('fas', 'cog')
    .GroupList
      - current_user.groups.each do |group|
        .Group
          = link_to group_messages_path(group) do
            .Group__name
              = group.name
            .Group__message
              = group.show_last_message